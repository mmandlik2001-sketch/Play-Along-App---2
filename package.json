{
  "name": "playalong-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Production-ready PlayAlong monorepo",
  "workspaces": [
    "apps/*",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:mobile",
    "dev:mobile": "npm --workspace @playalong/mobile run start",
    "dev:admin": "npm --workspace @playalong/admin run dev",
    "dev:owner": "npm --workspace @playalong/owner run dev",
    "dev:backend": "npm --workspace @playalong/backend run dev",
    "build": "npm run -ws build",
    "lint": "npm run -ws lint",
    "typecheck": "npm run -ws typecheck"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
